<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eter.roundcalc.MainActivity"
    tools:deviceIds="wear_round"
    android:background="?android:selectableItemBackgroundBorderless"
    android:clickable="true">

    <android.support.wearable.view.CircledImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calc_grid"
        android:src="@drawable/calc_grid_1600x1600"
        android:background="@drawable/lb500_lb100_640x640"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="92dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/mainLinearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/varOneTextView"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="start"
                android:gravity="bottom|right"
                android:textAlignment="gravity"
                android:background="#00000000"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:id="@+id/operatorTextView"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:background="#00000000"
                    android:maxLength="1"/>

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/varTwoTextView"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="start"
                    android:gravity="top|right"
                    android:textAlignment="gravity"
                    android:background="#00000000"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:background="@color/light_grey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/resultTextView"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="#00000000" />
    </LinearLayout>


</RelativeLayout>
